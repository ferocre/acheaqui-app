{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx",
    "paths": {
      "@components/*": ["components/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["/hooks/*"],
      "@constants/*": ["/constants/*"],
      "@assets/*": ["assets/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
